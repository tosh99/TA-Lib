{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "lib": [
            "es2021"
        ],
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist/esm",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
